{
  "id": null,
  "uid": "openguild-overview",
  "title": "OpenGuild Overview",
  "tags": ["openguild", "observability"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Request Duration (p95)",
      "id": 1,
      "datasource": {
        "type": "prometheus",
        "uid": "PBFAFD06EF2E8156"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(openguild_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests Per Second",
      "id": 2,
      "datasource": {
        "type": "prometheus",
        "uid": "PBFAFD06EF2E8156"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(openguild_http_requests_total[5m]))",
          "legendFormat": "rps"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "WebSocket Queue Depth",
      "id": 3,
      "datasource": {
        "type": "prometheus",
        "uid": "PBFAFD06EF2E8156"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "openguild_websocket_queue_depth",
          "legendFormat": "{{channel_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Messaging Events",
      "id": 4,
      "datasource": {
        "type": "prometheus",
        "uid": "PBFAFD06EF2E8156"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(openguild_messaging_events_total[5m])) by (outcome)",
          "legendFormat": "{{outcome}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    }
  ],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" }
}
