# OpenGuild Frontend Environment Configuration - Example
# Copy this file to .env and configure for your environment

# Backend API Configuration
# Set these to match your backend server URLs
NUXT_PUBLIC_API_BASE_URL=http://localhost:8080
NUXT_PUBLIC_WS_BASE_URL=ws://localhost:8080

# For production with HTTPS:
# NUXT_PUBLIC_API_BASE_URL=https://api.your-domain.com
# NUXT_PUBLIC_WS_BASE_URL=wss://api.your-domain.com

# Development Server Configuration
NUXT_DEV_HOST=0.0.0.0
NUXT_DEV_PORT=3001
NUXT_DEV_HTTPS=false

# Server-side API URL (for SSR)
# This should be accessible from your server environment
NUXT_API_BASE_URL=http://localhost:8080

# Feature Flags
# Enable/disable features based on your backend configuration
NUXT_PUBLIC_ENABLE_METRICS=true
NUXT_PUBLIC_ENABLE_FEDERATION=false
NUXT_PUBLIC_ENABLE_MLS=false

# Application Configuration
NUXT_PUBLIC_APP_NAME=OpenGuild
# Should match your backend's server name
NUXT_PUBLIC_SERVER_NAME=localhost

# Debug and Environment
NUXT_DEBUG=false
NODE_ENV=development

# Authentication Configuration
# Session timeout in milliseconds (1 hour = 3600000)
NUXT_PUBLIC_SESSION_TIMEOUT=3600000

# UI Configuration
# NUXT_PUBLIC_THEME=dark
# NUXT_PUBLIC_DEFAULT_LOCALE=en

# Analytics and Monitoring (if needed)
# NUXT_PUBLIC_ANALYTICS_ID=
# NUXT_PUBLIC_SENTRY_DSN=
